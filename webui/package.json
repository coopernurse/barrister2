{
  "name": "barrister-webui",
  "version": "1.0.0",
  "description": "Universal Barrister RPC Client Web UI",
  "type": "module",
  "scripts": {
    "build": "esbuild src/app.js --bundle --outfile=dist/app.js --format=iife --global-name=BarristerUI --external:mithril",
    "dev": "esbuild src/app.js --bundle --outfile=dist/app.js --format=iife --global-name=BarristerUI --external:mithril --watch",
    "lint": "eslint src/**/*.js || true",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "mithril": "^2.3.6"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "jsdom": "^25.0.1",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "esbuild": "^0.27.2"
  }
}
